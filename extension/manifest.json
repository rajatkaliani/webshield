{
  "manifest_version": 3,
  "name": "NetShield Secure",
  "version": "1.0",
  "description": "Scan websites for security vulnerabilities using the WebShield backend.",
  "permissions": ["activeTab", "scripting", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "NetShield.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}